  const normalizeRank = useCallback((rank) => {
    if (!rank) return '';
    return rank
      .replace('äºŒæ®µ', 'å¼æ®µ')
      .replace('ä¸‰æ®µ', 'å‚æ®µ')
      .replace('äºŒç´š', 'å¼ç´š')
      .replace('ä¸€ç´š', 'å£±ç´š');
